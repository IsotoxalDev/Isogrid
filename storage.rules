rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow access to canvas-images folder for authenticated users
    // This matches the path structure in src/components/canvas/canvas-item.tsx:
    // ref(storage, `canvas-images/${item.id}/${Date.now()}_${file.name}`)
    match /canvas-images/{itemId}/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Default fallback (though users should ideally use the specific path above)
    // allowing authenticated users to read/write anywhere if needed for other features
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
